<config>
    <modules>
        <Oceanpayment_OPOXXO>
            <version>1.6.0</version>
        </Oceanpayment_OPOXXO>
    </modules>
    <global>
		  <helpers>
		  	   <opoxxo>
		  	   	   <class>Oceanpayment_OPOXXO_Helper</class>
		  	   </opoxxo>
		  </helpers>	
        <models>
            <opoxxo>
                <class>Oceanpayment_OPOXXO_Model</class>
                <resourceModel>opoxxo_mysql4</resourceModel>
            </opoxxo>
            <opoxxo_mysql4>
                <class>Oceanpayment_OPOXXO_Model_Mysql4</class>
                <entities>
                    <api_debug><table>opoxxo_api_debug</table></api_debug>
                </entities>
            </opoxxo_mysql4>
        </models>
        <resources>
            <opoxxo_setup>
                <setup>
                    <module>Oceanpayment_OPOXXO</module>
                    <class>Oceanpayment_OPOXXO_Model_Mysql4_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </opoxxo_setup>
            <opoxxo_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </opoxxo_write>
            <opoxxo_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </opoxxo_read>
        </resources>
        <blocks>
            <opoxxo><class>Oceanpayment_OPOXXO_Block</class></opoxxo>
    	</blocks>
        <payment>
            <opoxxo_payment>
                <languages>
                    <FR>
                        <code>FR</code>
                        <name>Français</name>
                    </FR>
                    <EN>
                        <code>EN</code>
                        <name>Anglais</name>
                    </EN>
                    <ES>
                        <code>ES</code>
                        <name>Espagnol</name>
                    </ES>
                    <DE>
                        <code>DE</code>
                        <name>Allemand</name>
                    </DE>
                    <IT>
                        <code>IT</code>
                        <name>Italien</name>
                    </IT>
                    <NL>
                        <code>NL</code>
                        <name>Néerlandais</name>
                    </NL>
                </languages>
            </opoxxo_payment>
        </payment>
    </global>
    <frontend>
        <secure_url>
            <opoxxo_payment>/opoxxo/payment</opoxxo_payment>
        </secure_url>
        <routers>
            <opoxxo>
                <use>standard</use>
                <args>
                    <module>Oceanpayment_OPOXXO</module>
                    <frontName>opoxxo</frontName>
                </args>
            </opoxxo>
        </routers>
        <translate>
            <modules>
                <Oceanpayment_OPOXXO>
                    <files>
                        <default>Oceanpayment_OPOXXO.csv</default>
                    </files>
                </Oceanpayment_OPOXXO>
            </modules>
        </translate>
        <layout>
            <updates>
                <opoxxo>
                    <file>opoxxo.xml</file>
                </opoxxo>
            </updates>
        </layout>
    </frontend>
    <adminhtml>
        <translate>
            <modules>
                <Oceanpayment_OPOXXO>
                    <files>
                        <default>Oceanpayment_OPOXXO.csv</default>
                    </files>
                </Oceanpayment_OPOXXO>
            </modules>
        </translate>
    </adminhtml>
    <default>
        <payment>
            <oceanpayment_oxxo>
                  <model>opoxxo/payment</model>
                  <title>OXXO</title>
                  <allowspecific>0</allowspecific>
                  <transaction_type>0</transaction_type>
            </oceanpayment_oxxo>
        </payment>
    </default>
</config>
