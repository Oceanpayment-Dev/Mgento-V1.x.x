<config>
    <modules>
        <Oceanpayment_OPSofortbanking>
            <version>1.7.1</version>
        </Oceanpayment_OPSofortbanking>
    </modules>
    <global>
		  <helpers>
		  	   <opsofortbanking>
		  	   	   <class>Oceanpayment_OPSofortbanking_Helper</class>
		  	   </opsofortbanking>
		  </helpers>	
        <models>
            <opsofortbanking>
                <class>Oceanpayment_OPSofortbanking_Model</class>
                <resourceModel>opsofortbanking_mysql4</resourceModel>
            </opsofortbanking>
            <opsofortbanking_mysql4>
                <class>Oceanpayment_OPSofortbanking_Model_Mysql4</class>
                <entities>
                    <api_debug><table>opsofortbanking_api_debug</table></api_debug>
                </entities>
            </opsofortbanking_mysql4>
        </models>
        <resources>
            <opsofortbanking_setup>
                <setup>
                    <module>Oceanpayment_OPSofortbanking</module>
                    <class>Oceanpayment_OPSofortbanking_Model_Mysql4_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </opsofortbanking_setup>
            <opsofortbanking_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </opsofortbanking_write>
            <opsofortbanking_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </opsofortbanking_read>
        </resources>
        <blocks>
            <opsofortbanking><class>Oceanpayment_OPSofortbanking_Block</class></opsofortbanking>
    	</blocks>
        <payment>
            <opsofortbanking_payment>
                <languages>
                    <FR>
                        <code>FR</code>
                        <name>Français</name>
                    </FR>
                    <EN>
                        <code>EN</code>
                        <name>Anglais</name>
                    </EN>
                    <ES>
                        <code>ES</code>
                        <name>Espagnol</name>
                    </ES>
                    <DE>
                        <code>DE</code>
                        <name>Allemand</name>
                    </DE>
                    <IT>
                        <code>IT</code>
                        <name>Italien</name>
                    </IT>
                    <NL>
                        <code>NL</code>
                        <name>Néerlandais</name>
                    </NL>
                </languages>
            </opsofortbanking_payment>
        </payment>
    </global>
    <frontend>
        <secure_url>
            <opsofortbanking_payment>/opsofortbanking/payment</opsofortbanking_payment>
        </secure_url>
        <routers>
            <opsofortbanking>
                <use>standard</use>
                <args>
                    <module>Oceanpayment_OPSofortbanking</module>
                    <frontName>opsofortbanking</frontName>
                </args>
            </opsofortbanking>
        </routers>
        <translate>
            <modules>
                <Oceanpayment_OPSofortbanking>
                    <files>
                        <default>Oceanpayment_OPSofortbanking.csv</default>
                    </files>
                </Oceanpayment_OPSofortbanking>
            </modules>
        </translate>
        <layout>
            <updates>
                <opsofortbanking>
                    <file>opsofortbanking.xml</file>
                </opsofortbanking>
            </updates>
        </layout>
    </frontend>
    <adminhtml>
        <translate>
            <modules>
                <Oceanpayment_OPSofortbanking>
                    <files>
                        <default>Oceanpayment_OPSofortbanking.csv</default>
                    </files>
                </Oceanpayment_OPSofortbanking>
            </modules>
        </translate>
    </adminhtml>
    <default>
        <payment>
            <oceanpayment_sofortbanking>
                  <model>opsofortbanking/payment</model>
                  <title>Sofortbanking</title>
                  <allowspecific>0</allowspecific>
                  <transaction_type>0</transaction_type>
            </oceanpayment_sofortbanking>
        </payment>
    </default>
</config>
