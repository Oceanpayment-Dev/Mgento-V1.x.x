<config>
    <modules>
        <Oceanpayment_OPEfecty>
            <version>1.6.0</version>
        </Oceanpayment_OPEfecty>
    </modules>
    <global>
		  <helpers>
		  	   <opefecty>
		  	   	   <class>Oceanpayment_OPEfecty_Helper</class>
		  	   </opefecty>
		  </helpers>	
        <models>
            <opefecty>
                <class>Oceanpayment_OPEfecty_Model</class>
                <resourceModel>opefecty_mysql4</resourceModel>
            </opefecty>
            <opefecty_mysql4>
                <class>Oceanpayment_OPEfecty_Model_Mysql4</class>
                <entities>
                    <api_debug><table>opefecty_api_debug</table></api_debug>
                </entities>
            </opefecty_mysql4>
        </models>
        <resources>
            <opefecty_setup>
                <setup>
                    <module>Oceanpayment_OPEfecty</module>
                    <class>Oceanpayment_OPEfecty_Model_Mysql4_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </opefecty_setup>
            <opefecty_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </opefecty_write>
            <opefecty_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </opefecty_read>
        </resources>
        <blocks>
            <opefecty><class>Oceanpayment_OPEfecty_Block</class></opefecty>
    	</blocks>
        <payment>
            <opefecty_payment>
                <languages>
                    <FR>
                        <code>FR</code>
                        <name>Français</name>
                    </FR>
                    <EN>
                        <code>EN</code>
                        <name>Anglais</name>
                    </EN>
                    <ES>
                        <code>ES</code>
                        <name>Espagnol</name>
                    </ES>
                    <DE>
                        <code>DE</code>
                        <name>Allemand</name>
                    </DE>
                    <IT>
                        <code>IT</code>
                        <name>Italien</name>
                    </IT>
                    <NL>
                        <code>NL</code>
                        <name>Néerlandais</name>
                    </NL>
                </languages>
            </opefecty_payment>
        </payment>
    </global>
    <frontend>
        <secure_url>
            <opefecty_payment>/opefecty/payment</opefecty_payment>
        </secure_url>
        <routers>
            <opefecty>
                <use>standard</use>
                <args>
                    <module>Oceanpayment_OPEfecty</module>
                    <frontName>opefecty</frontName>
                </args>
            </opefecty>
        </routers>
        <translate>
            <modules>
                <Oceanpayment_OPEfecty>
                    <files>
                        <default>Oceanpayment_OPEfecty.csv</default>
                    </files>
                </Oceanpayment_OPEfecty>
            </modules>
        </translate>
        <layout>
            <updates>
                <opefecty>
                    <file>opefecty.xml</file>
                </opefecty>
            </updates>
        </layout>
    </frontend>
    <adminhtml>
        <translate>
            <modules>
                <Oceanpayment_OPEfecty>
                    <files>
                        <default>Oceanpayment_OPEfecty.csv</default>
                    </files>
                </Oceanpayment_OPEfecty>
            </modules>
        </translate>
    </adminhtml>
    <default>
        <payment>
            <oceanpayment_efecty>
                  <model>opefecty/payment</model>
                  <title>Efecty</title>
                  <allowspecific>0</allowspecific>
                  <transaction_type>0</transaction_type>
            </oceanpayment_efecty>
        </payment>
    </default>
</config>
