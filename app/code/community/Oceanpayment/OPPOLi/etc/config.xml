<config>
    <modules>
        <Oceanpayment_OPPOLi>
            <version>1.6.0</version>
        </Oceanpayment_OPPOLi>
    </modules>
    <global>
		  <helpers>
		  	   <oppoli>
		  	   	   <class>Oceanpayment_OPPOLi_Helper</class>
		  	   </oppoli>
		  </helpers>	
        <models>
            <oppoli>
                <class>Oceanpayment_OPPOLi_Model</class>
                <resourceModel>oppoli_mysql4</resourceModel>
            </oppoli>
            <oppoli_mysql4>
                <class>Oceanpayment_OPPOLi_Model_Mysql4</class>
                <entities>
                    <api_debug><table>oppoli_api_debug</table></api_debug>
                </entities>
            </oppoli_mysql4>
        </models>
        <resources>
            <oppoli_setup>
                <setup>
                    <module>Oceanpayment_OPPOLi</module>
                    <class>Oceanpayment_OPPOLi_Model_Mysql4_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </oppoli_setup>
            <oppoli_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </oppoli_write>
            <oppoli_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </oppoli_read>
        </resources>
        <blocks>
            <oppoli><class>Oceanpayment_OPPOLi_Block</class></oppoli>
    	</blocks>
        <payment>
            <oppoli_payment>
                <languages>
                    <FR>
                        <code>FR</code>
                        <name>Français</name>
                    </FR>
                    <EN>
                        <code>EN</code>
                        <name>Anglais</name>
                    </EN>
                    <ES>
                        <code>ES</code>
                        <name>Espagnol</name>
                    </ES>
                    <DE>
                        <code>DE</code>
                        <name>Allemand</name>
                    </DE>
                    <IT>
                        <code>IT</code>
                        <name>Italien</name>
                    </IT>
                    <NL>
                        <code>NL</code>
                        <name>Néerlandais</name>
                    </NL>
                </languages>
            </oppoli_payment>
        </payment>
    </global>
    <frontend>
        <secure_url>
            <oppoli_payment>/oppoli/payment</oppoli_payment>
        </secure_url>
        <routers>
            <oppoli>
                <use>standard</use>
                <args>
                    <module>Oceanpayment_OPPOLi</module>
                    <frontName>oppoli</frontName>
                </args>
            </oppoli>
        </routers>
        <translate>
            <modules>
                <Oceanpayment_OPPOLi>
                    <files>
                        <default>Oceanpayment_OPPOLi.csv</default>
                    </files>
                </Oceanpayment_OPPOLi>
            </modules>
        </translate>
        <layout>
            <updates>
                <oppoli>
                    <file>oppoli.xml</file>
                </oppoli>
            </updates>
        </layout>
    </frontend>
    <adminhtml>
        <translate>
            <modules>
                <Oceanpayment_OPPOLi>
                    <files>
                        <default>Oceanpayment_OPPOLi.csv</default>
                    </files>
                </Oceanpayment_OPPOLi>
            </modules>
        </translate>
    </adminhtml>
    <default>
        <payment>
            <oceanpayment_poli>
                  <model>oppoli/payment</model>
                  <title>POLi</title>
                  <allowspecific>0</allowspecific>
                  <transaction_type>0</transaction_type>
            </oceanpayment_poli>
        </payment>
    </default>
</config>
