<config>
    <modules>
        <Oceanpayment_OPQiwi>
            <version>1.7.1</version>
        </Oceanpayment_OPQiwi>
    </modules>
    <global>
		  <helpers>
		  	   <opqiwi>
		  	   	   <class>Oceanpayment_OPQiwi_Helper</class>
		  	   </opqiwi>
		  </helpers>	
        <models>
            <opqiwi>
                <class>Oceanpayment_OPQiwi_Model</class>
                <resourceModel>opqiwi_mysql4</resourceModel>
            </opqiwi>
            <opqiwi_mysql4>
                <class>Oceanpayment_OPQiwi_Model_Mysql4</class>
                <entities>
                    <api_debug><table>opqiwi_api_debug</table></api_debug>
                </entities>
            </opqiwi_mysql4>
        </models>
        <resources>
            <opqiwi_setup>
                <setup>
                    <module>Oceanpayment_OPQiwi</module>
                    <class>Oceanpayment_OPQiwi_Model_Mysql4_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </opqiwi_setup>
            <opqiwi_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </opqiwi_write>
            <opqiwi_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </opqiwi_read>
        </resources>
        <blocks>
            <opqiwi><class>Oceanpayment_OPQiwi_Block</class></opqiwi>
    	</blocks>
        <payment>
            <opqiwi_payment>
                <languages>
                    <FR>
                        <code>FR</code>
                        <name>Français</name>
                    </FR>
                    <EN>
                        <code>EN</code>
                        <name>Anglais</name>
                    </EN>
                    <ES>
                        <code>ES</code>
                        <name>Espagnol</name>
                    </ES>
                    <DE>
                        <code>DE</code>
                        <name>Allemand</name>
                    </DE>
                    <IT>
                        <code>IT</code>
                        <name>Italien</name>
                    </IT>
                    <NL>
                        <code>NL</code>
                        <name>Néerlandais</name>
                    </NL>
                </languages>
            </opqiwi_payment>
        </payment>
    </global>
    <frontend>
        <secure_url>
            <opqiwi_payment>/opqiwi/payment</opqiwi_payment>
        </secure_url>
        <routers>
            <opqiwi>
                <use>standard</use>
                <args>
                    <module>Oceanpayment_OPQiwi</module>
                    <frontName>opqiwi</frontName>
                </args>
            </opqiwi>
        </routers>
        <translate>
            <modules>
                <Oceanpayment_OPQiwi>
                    <files>
                        <default>Oceanpayment_OPQiwi.csv</default>
                    </files>
                </Oceanpayment_OPQiwi>
            </modules>
        </translate>
        <layout>
            <updates>
                <opqiwi>
                    <file>opqiwi.xml</file>
                </opqiwi>
            </updates>
        </layout>
    </frontend>
    <adminhtml>
        <translate>
            <modules>
                <Oceanpayment_OPQiwi>
                    <files>
                        <default>Oceanpayment_OPQiwi.csv</default>
                    </files>
                </Oceanpayment_OPQiwi>
            </modules>
        </translate>
    </adminhtml>
    <default>
        <payment>
            <oceanpayment_qiwi>
                  <model>opqiwi/payment</model>
                  <title>Qiwi</title>
                  <allowspecific>0</allowspecific>
                  <transaction_type>0</transaction_type>
            </oceanpayment_qiwi>
        </payment>
    </default>
</config>
